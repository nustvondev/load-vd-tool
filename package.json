{
  "name": "toolvideov2",
  "version": "1.0.0",
  "description": "Borderless Electron video player with transform controls",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "video",
    "player"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.toolvideov2.app",
    "productName": "ToolVideo V2",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*",
      "!**/*.md",
      "!dist",
      "!*.mp4",
      "!*.mov",
      "!*.mkv",
      "!*.avi",
      "!*.flv",
      "!*.webm"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "sign": null,
      "signingHashAlgorithms": []
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Video"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
